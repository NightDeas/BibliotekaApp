<Window x:Class="BibliotekaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BibliotekaApp"
        mc:Ignorable="d"
        Title="Библиотека" Height="450" Width="800" MinWidth="400" MinHeight="200" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="titlePageLabel" HorizontalAlignment="Left" Foreground="Green" FontSize="26" VerticalAlignment="Center" Margin="5"></Label>
        <Button x:Name="btnBack" Click="btnBack_Click" Content="Назад" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="20,5" FontSize="26" Margin="5" Visibility="Collapsed"></Button>
        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden" Navigated="mainFrame_Navigated" Grid.Row="1"></Frame>
    </Grid>
</Window>
