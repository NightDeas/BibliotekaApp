<UserControl x:Class="BibliotekaApp.UserControls.Parametrs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BibliotekaApp.UserControls"
             xmlns:converter="clr-namespace:BibliotekaApp.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converter:ConverterValue x:Key="converter"></converter:ConverterValue>
    </UserControl.Resources>
    <StackPanel Orientation="Vertical">
        <TextBlock Text="{Binding Parametr}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="22"></TextBlock>
        <TextBox TextWrapping="Wrap" Margin="10,5" Text="{Binding Value}" VerticalAlignment="Center" Width="350" FontSize="22"></TextBox>
        <Grid x:Name="gridCb">
            <StackPanel Orientation="Vertical">
                <Grid Height="30">
                    <TextBox VerticalContentAlignment="Center" TextChanged="TextBox_TextChanged"></TextBox>
                    <Label Foreground="Gray" IsHitTestVisible="False" Content="{Binding Hint}" Visibility="{Binding IsVisibleHint, Converter={StaticResource converter}, UpdateSourceTrigger=PropertyChanged}"></Label>
                </Grid>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
