<UserControl x:Class="BibliotekaApp.UserControls.BookControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BibliotekaApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <Border Background="Lime">
        <Border.BorderThickness>10</Border.BorderThickness>
        <Border.CornerRadius>25</Border.CornerRadius>
        <StackPanel Orientation="Vertical" Margin="5" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Война и мир" FontWeight="Bold" Foreground="Black" ></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Лев Толстой" ></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Год издания: " ></TextBlock>
                <TextBlock Text="1933" ></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Издатель: " ></TextBlock>
                <TextBlock Text="ИП Бурнасов" ></TextBlock>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
